<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jinsung.adoda.gpmon" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/IntroTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity android:name=".MachinesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DailyApiCallActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HourlyApiCallsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".fortest.TestBase" />
        <activity android:name=".NetworkUnavailableActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
